            <label asp-for="Degree" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Degree" class="form-control" />
                <span asp-validation-for="Degree" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GraduationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="GraduationDate" class="form-control" />
                <span asp-validation-for="GraduationDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
