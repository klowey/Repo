@model IEnumerable<NewResume.Models.Employer>

@{
    ViewData["Title"] = "Index";
}

<h2>Employer</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployerName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Jobs)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.EmployerWebsite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployerName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.WorkHistory.JobTitle)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.EmployerWebsite)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
