            <td>
                @Html.DisplayFor(modelItem => item.EmployerStreet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployerZip)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployerId">Edit</a> |
