            <th>
                @Html.DisplayNameFor(model => model.EmployerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployerPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployerState)
