@model IEnumerable<NewResume.Models.Skill>

@{
    ViewData["Title"] = "Skills";
}

<h2>Skills</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SkillName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proficiency)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SkillName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proficiency)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SkillId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SkillId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SkillId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
